<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luoye.whr.gallery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.luoye.whr.gallery.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.luoye.whr.gallery.view.home.HomeActivity"></activity>
        <activity
            android:name="com.luoye.whr.gallery.view.preview.PreviewActivity"
            android:theme="@style/TranslucentStyle" />
        <activity android:name="com.luoye.whr.gallery.view.welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.luoye.whr.gallery.view.preview.FullImgPinchActivity" />
        <activity android:name="com.luoye.whr.gallery.view.search.SearchActivity"></activity>
        <activity android:name="com.luoye.whr.gallery.view.search.SearchListActivity"></activity>
        <activity android:name="com.luoye.whr.gallery.view.login.LoginActivity"></activity>
    </application>

</manifest>